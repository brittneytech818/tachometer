{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": []
}
